{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext",
    ],
    "target": "ES6",
    "outDir": "./lib",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "strict": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts"
  ]
}